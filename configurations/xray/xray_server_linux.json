{
  "log": {
    "loglevel": "none", //  "debug" | "info" | "warning" | "error" | "none"
    "access": "/var/log/xray/access.log",
    "error": "/var/log/xray/error.log",
    "dnslog": true
  },

  "inbounds": [
    {
      "port": 443,
      "protocol": "vless",
      "sniffing": {
        "enabled": true,
        "routeOnly": true,
        "destOverride": ["http", "tls"]
      },
      "settings": {
        "clients": [
          {
            "id": "${uuid}",
            "flow": "xtls-rprx-vision",
          }
        ],
        "decryption": "none",
        "fallbacks": [
          {
            "dest": ${fallback_port_http},
            "xver": 1
          }
        ]
      },
      "streamSettings": {
        "network": "tcp",
        "security": "tls",
        "tlsSettings": {
          "alpn": ["http/1.1","h2"],
          "minVersion": "1.3",
          "certificates": [
            {
              "ocspStapling": 0,
              "certificateFile": "/etc/ssl/web.crt",
              "keyFile": "/etc/ssl/web.key"
            }
          ]
        },
        "sockopt": {"tcpFastOpen": 32768}
      }
    }
  ],

  "outbounds": [
    {
      "protocol": "freedom"
    },
    {
      "protocol": "blackhole",
      "settings": {},
      "tag": "block"
    }
  ],

  "routing": {
    "domainStrategy": "AsIs",
    "domainMatcher": "hybrid",
    "rules": [
      {
        "type": "field",
        "protocol": ["bittorrent"],
        "outboundTag": "block"
      }
    ]
  }
}
